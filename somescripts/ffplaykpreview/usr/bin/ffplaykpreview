#$1 -x option 
#$4 x value 
#$4 -y option 
#$4 value y 
#$5 input file 

if [[ -z "$(type -p ffplay)" ]] ; then 
  echo "This program require ffplay ; please install it on debian sudo apt-get install ffmpeg
  ERROR NO FFPLAY FOUND exiting... " 
  exit 
  fi 

AUDIO="false"

for extension in 3gp aiff aac ac3 alac ape atrac flac m4a m4p midi mmf mp3 mp2 ogg oga ra rm ram tta wav wavpack wma ; do 

	if  [[ "$5" == *.$extension ]] ; then
		AUDIO="true"
		break 
	fi 

done

if [[ $AUDIO == true ]]; then 

		 ffplay -nodisp "$5"
 
	else 

		 ffplay "$1" "$2" "$3" "$4" "$5"
fi 
 

 