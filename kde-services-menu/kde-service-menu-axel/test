#remove duplicated cell from a bash array with uniq 
a
echo foo >/tmp/testfile
echo bar >>/tmp/testfile
echo foo >>/tmp/testfile
echo bar >>/tmp/testfile
echo "test one" >>/tmp/testfile
echo "test 2" >>/tmp/testfile

echo testing the function uniq /tmp/testfile

uniq /tmp/testfile

echo 

a=()
a=(foo bar foo bar "test 1" "test two")

echo this is what we get from uniq  
echo 

uniq <<<"$(printf -- '%s\n' "${a[@]}")"
 
echo 
echo 
echo now we will check thi code 

i=0
while read line ; do 
	c[$i]="$line"
	i=$(($i+1))
done <<<"$(uniq <<<"$(printf -- '%s\n' "${a[@]}"| sort)")"
 
 
#printing the new array without duplicated cell 
echo ${c[0]}
echo ${c[1]}
echo ${c[2]}
echo ${c[3]}
echo ${c[4]}
echo ${c[5]}

echo this is the ultimate stuff 

declare -A seen=();uniq_arr=() ;for elem in "${a[@]}";do if ((!seen["$elem"]++));then uniq_arr+=( "$elem");fi;done; echo ${uniq_arr[@]}