[Desktop Entry]
Actions=folderappend;version;
Icon=dolphin
ServiceTypes=KonqPopupMenu/Plugin,inode/directory
Type=Service
X-KDE-Priority=TopLevel
X-KDE-Submenu=Vlc Folder Append
X-KDE-Submenu[it]=Aggiungi cartella a vlc

[Desktop Action folderappend]
Exec=ffmpeg-peace-service-menu fo "%u"
Icon=list-add
Name=Add Folder to FFmpeg
Name[it]=Aggiungi Cartella a FFmpeg

[Desktop Action version]
Exec=kdialog --info $(ffmpeg-peace-service-menu -h)  && echo %u >>/dev/null 
Icon=dialog-information
Name=Version
Name[it]=Versione
