#!/bin/bash
cd /tmp ; wget https://kde-peace-settings.googlecode.com/git/dolphinExperiments/dolphin/src/panels/information/H_phononwidget.diff ; wget https://kde-peace-settings.googlecode.com/git/dolphinExperiments/dolphin/src/panels/information/phononwidget.diff ; wget http://download.kde.org/stable/4.12.3/src/kde-baseapps-4.12.3.tar.xz ; tar -xJf kde-baseapps-4.12.3.tar.xz ;  patch /tmp/kde-baseapps-4.12.3/dolphin/src/panels/information/phononwidget.cpp </tmp/phononwidget.diff; patch /tmp/kde-baseapps-4.12.3/dolphin/src/panels/information/phononwidget.h <H_phononwidget.diff; cd /tmp/kde-baseapps-4.12.3; mkdir build ; cd build ; cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr/local .. ; make ; cd dolphin/src/ ; ./dolphin