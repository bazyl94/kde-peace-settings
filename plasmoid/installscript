if [ "$(id -u)" = 0 ]; then 
	echo "you have the power of Bud Spencer " 
	echo "installing..."
	 homefolder="$PWD"
	for f in */; do 
	
		cd $f
		rm -R build/
		mkdir build
		cd build
		cmake ..
		make 
		make install
		cd "$homefolder"
		done 
	kbuildsycoca5
	echo "

Nowardev Buttons Script End

"
else 
	echo "YOU ARE NOT ROOT TO INSTALL  YOU MUST BE ROOT.
have you typed wrong password?"
	exit 0
fi

//use only for test plasmoids
for a in $(plasmapkg2 --list | grep nowardev) ; do plasmawindowed $a & echo  ; done 

 
