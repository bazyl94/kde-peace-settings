	echo "installing..."
	 homefolder="$PWD"
	for f in */; do 
	
		cd $f
		rm -Rf build/
		mkdir build
		cd build
		cmake ..
		make 
		sudo make install
		cd "$homefolder"
		done 
	kbuildsycoca5
	echo "

Nowardev Buttons Script End

"


#use only for test plasmoids
sudo rm $HOME/.cache/ksycoca5
kbuildsycoca5
